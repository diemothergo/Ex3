@page "{orderId:int}"
@model Ex3.Pages.Orders.ReportModel
@{
    ViewData["Title"] = "Order Report";
}
<h2>Order Report</h2>
<div>
    <p><strong>Order ID:</strong> @Model.Order.OrderID</p>
    <p><strong>Order Date:</strong> @Model.Order.OrderDate.ToShortDateString()</p>
    <p><strong>Agent:</strong> @Model.Order.Agent.AgentName</p>
    <h3>Order Details</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Unit Amount</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.Order.OrderDetails)
            {
                <tr>
                    <td>@detail.Item.ItemName</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.UnitAmount.ToString("C")</td>
                    <td>@(detail.Quantity * detail.UnitAmount).ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
    <button onclick="window.print()" class="btn btn-primary">Print</button>
</div>